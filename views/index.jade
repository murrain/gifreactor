extends layout

block append styles

block body
        body
                .row
                        .large-12.columns
                                h2 GreaseLTC
                                hr
                .row
                        .large-4.columns
                                | USD 
                                span#usd
                        .large-4.columns
                                | LTC 
                                span#ltc
                        .large-4.columns
                                | BTC 
                                span#btc
                <hr>
                .row
                        .large-6.columns
                                .row
                                        .large-12.columns
                                                h4
                                                        | Grease
                                .row
                                        .large-12.columns
                                                h4#greaseltc= greaseltc
                        .large-6.columns
                                .row
                                         .large-12.columns
                                                h4
                                                        | Reverse
                                .row
                                        .large-12.columns
                                                h4#reversegltc= reversegltc
                block append scripts
                        script(type='text/javascript', src='/socket.io/socket.io.js')
                        script
                                var socket= io.connect()
                                socket.on('ticker',function(data) {
                                        console.log(data);
                                        $("#greaseltc").html(data.greaseltc);
                                        $("#reversegltc").html(data.reversegltc);
                                        $("#usd").html(data.usd);
                                        $("#ltc").html(data.ltc);
                                        $("#btc").html(data.btc);
                                });

